<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="NDLP APLHISTORICALDATA PRD" parallel="tests" thread-count="3">
    <parameter name="USE_CASE" value="ndlp-aplhistoricaldata" />
    <test name="Metadata Verify">
        <parameter name="SENDER_MANIFEST" value="ndlp-aplhistoricaldata.properties"/>
        <parameter name="SENDER_MANIFEST_NO_DEST_ID" value="no-dest-id.properties" />
        <parameter name="SENDER_MANIFEST_NO_EVENT" value="no-event.properties" />
        <parameter name="SENDER_MANIFEST_INVALID_FILENAME" value="invalid-filename.properties" />
        <classes>
            <class name="MetadataVerify" />
        </classes>
    </test>
    <test name="File Copy">
        <parameter name="SENDER_MANIFEST" value="ndlp-aplhistoricaldata.properties"/>
        <classes>
            <class name="FileCopy">
                <methods>
                    <exclude name="shouldCopyToRoutingContainer" />
                </methods>
            </class>
        </classes>
    </test>
    <test name="Proc Stat">
        <parameter name="SENDER_MANIFEST" value="ndlp-aplhistoricaldata.properties"/>
        <!-- Define parameters for expected URLs as comma-separated lists -->
        <parameter name="EXPECTED_SOURCE_URL_PREFIXES" value="https://ocioededataexchangeprd.blob.core.windows.net/ndlp-aplhistoricaldata"/>
        <parameter name="EXPECTED_DESTINATION_URL_PREFIXES" value="https://edavprddatalakedexprd.blob.core.windows.net/upload/ndlp-aplhistoricaldata"/>
        <groups>
            <run>
                <exclude name="proc-stat-trace" />
            </run>
        </groups>
        <classes>
            <class name="ProcStat" />
        </classes>
    </test>
</suite>